;; EchoContract.contract.fc
#include "stdlib.fc"

global _on_external() impure {
    ;; Если есть тело сообщения — возвращаем его отправителю
    if (msg_body_ref.bits > 0) {
        var reply_body = slice_to_cell(msg_body_ref);
        ;; отсылаем обратно на адрес msg_info.src
        send_rawmsg(msg_info.src, reply_body, {value: msg_info.value, bounce: false});
    }
}
